{
    "manifest_version": 2,
    "name": "龙空黑名单过滤",
    "short_name": "龙空黑名单",
    "version": "1.0",
    "default_locale": "zh_CN",
    "description": "用于过滤龙空的黑名单用户发表的主题和回复",
    "icons": {
        "16": "images/filter_16.png",
        "48": "images/filter_48.png",
        "128": "images/filter_128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/filter_19.png",
            "38": "images/filter_38.png"
        },
        "default_title": "龙空黑名单过滤",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://lkong.cn/forum/*",
                "http://lkong.cn/forum/*"
            ],
            "js": [
                "js/jquery-3.3.1.js",
                "js/filter.js"
            ],
            "css": [
                "style/filter.css"
            ]
        }
    ]
}